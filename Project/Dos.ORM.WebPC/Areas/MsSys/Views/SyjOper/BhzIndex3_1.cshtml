<style type="text/css">
    body {
        background-color: rgb(240, 245, 246);
    }

    .ibox-title {
        padding: 5px 5px;
        width: 100%;
        min-height: 40px;
        overflow: hidden;
        margin: 5px 5px;
        background-color: #fff;
    }

    .ibox-body {
        position: relative;
        width: 100%;
        height: 95%;
        overflow-x: auto;
        overflow-y: auto;
        padding: 0px 0px;
        margin: 0px 5px 5px 5px; /*上  右  下  左*/
        background-color: #fff;
