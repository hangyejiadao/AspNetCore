
@{
    ViewBag.Title = "SubScttView";
}

@{
    ViewBag.Title = "SampleView";
    Layout = "~/Views/BasePage/_LayoutMsSysEmpty.cshtml";
}

<style>
    .table {
        width: 90%;
        border: 0px solid #dedede;
        font-size: 12px;
        color: #1f3948;
    }

        .table tr td {
            height: 30px;
            line-height: 30px;
        }

    table tr td {
        border-bottom: 1px solid #e1e1e1;
    }

    .table tr td span {
        color: #666;
    }

    .table .t_tit {
        padding: 10px 0;
        border-bottom: 3px solid #bbe2e9;
    }
</style>

<script src="~/Content/Components/AngularJS/angular.min.js"></script>

<div data-options="region:'center',border:false" ng-app="pageApp">

    <table class="table" ng-controller="pageCtrl">
        <tbody>
            <tr>
                <td align="right" style="width: 30%;border-bottom:none;">样品名称：</td>
                <td style="width: 70%;text-align:left">
                    <span>{{model.SampleName}}</span>
                </td>
            </tr>

            <tr>
                <td align="right" style="width: 30%;border-bottom:none;">样品编号：</td>
                <td style="width: 70%;text-align:left">
                    <span>{{model.SampleNumber}}</span>
                </td>
            </tr>

            <tr>
                <td align="right" style="width: 30%;border-bottom:none;">规格型号：</td>
                <td style="width: 70%;text-align:left">
                    <span>{{model.Specifications}}</span>
                </td>
            </tr>

            <tr>
                <td align="right" style="width: 30%;border-bottom:none;">生产厂家/产地/取样地点：</td>
                <td style="width: 70%;text-align:left">
                    <span>{{model.SamplingLocations}}</span>
                </td>
            </tr>

            <tr>
                <td align="right" style="width: 30%;border-bottom:none;">样品数量：</td>
                <td style="width: 70%;text-align:left">
                    <span>{{model.SampleAmount}}</span>
                </td>
            </tr>           

            <tr>
                <td align="right" style="width: 30%;border-bottom:none;">委托日期：</td>
                <td style="width: 70%;text-align:left">
                    <span>{{model.EntrustDate}}</span>
                </td>
            </tr>

            <tr>
                <td align="right" style="width: 30%;border-bottom:none;">接受委托单位：</td>
                <td style="width: 70%;text-align:left">
                    <span>{{model.CommissionedUnit}}</span>
                </td>
            </tr>

            <tr>
                <td align="right" style="width: 30%;border-bottom:none;">接受委托单位证书编号：</td>
                <td style="width: 70%;text-align:left">
                    <span>{{model.CommissionedUnitNumber}}</span>
                </td>
            </tr>

        </tbody>
    </table>
</div>



<script>

    //初始化Angular
    var pageApp = angular.module('pageApp', []);
    pageApp.controller('pageCtrl', function ($scope, $http, $sce) {
        initNgData($scope, $http);
        initNgEvent($scope, $http, $sce);
    });

    //初始化ng数据
    function initNgData($scope, $http) {
        $scope.model = QBO.frm.getWin().SuperData;
       
        //console.log(JSON.stringify($scope.items));
    }

    //初始化ng事件
    function initNgEvent($scope, $http, $sce) {



    }

</script>






