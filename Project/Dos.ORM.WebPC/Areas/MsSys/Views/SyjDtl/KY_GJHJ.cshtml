            <tr>
                <td style="height: 30px;">工程部位及用途</td>
                <td colspan="3" >   <label style="width: 100%;font-weight: normal;">@Model.CJMC</label> </td>
            </tr>
            <tr>
                <td colspan="4" style="padding: 0px;">
                    <table id="Table2" style="WIDTH: 100%; border: none; HEIGHT: 100%; TEXT-ALIGN: center; BORDER-BOTTOM-STYLE: none"
                           bordercolor="black" cellspacing="0" cellpadding="1" align="center" border="1" frame="void">
                        <tr>
                            <td style="height: 30px; width: 16%;">试件编号</td>
                            <td>抗拉荷载(kN)</td>
                            <td class="lastco">抗拉强度(MPa)</td>
                        </tr>
                        @for (int i = 0; i < 3; i++)
                        {
                            <tr>
                                <td style="height: 30px;">@(i+1)</td>
                                <td>
                                    <input type="text" id="tklhz@(i+1)" style="width: 100%" value="@(Model.Wnjs.Count>i?Model.Wnjs[i].LZ:"")" readonly="readonly" />
                                </td>
                                <td class="lastco">
                                    <input type="text" id="tklqd@(i+1)" style="width: 100%" value="@(Model.Wnjs.Count>i?Model.Wnjs[i].LZQD:"")" readonly="readonly" />
                                </td>
                            </tr>  
                        }
                     

                        <tr>
                            <td colspan="5" style="padding: 0px;">
                                <table id="Table1" style="WIDTH: 100%; border: none; HEIGHT: 100%; TEXT-ALIGN: center; BORDER-BOTTOM-STYLE: none"
                                       bordercolor="black" cellspacing="0" cellpadding="1" align="center" border="1" frame="void">
                                    @for (int i = 0; i < 3; i++)
                                    {
                                        <tr>
                                            <td style="width: 16%;">
                                                试<br/>
                                                件<br/>
                                                @(i + 1)<br/>
                                                的<br/>
                                                数<br/>
                                                据<br/>
                                                图<br/>
                                                形
                                            </td>
                                            <td class="lastco">
                                                <a id="link@(i+1)" title="查看原图" target="_blank">
                                                    <img id="pic@(i+1)" src="@pic[i] " alt="" style="width: 90%; max-height: 210px;" />
                                                </a>
                                                <input id="txtLabel@(i+1)" style="display: none;" value="@labels[i]" />
                                                <input id="txtData@(i+1)" style="display: none;" value="@txtDatas[i]" />
                                                <canvas id="canvas@(i+1)" style="width: 95%; height: 140px; display: none; margin: 0 auto;"></canvas>
                                            </td>
                                        </tr>
                                    }  
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </form>
