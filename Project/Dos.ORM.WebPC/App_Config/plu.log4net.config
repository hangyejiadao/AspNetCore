<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!--log4net配置-->
  <appSettings>
    <add key="EnableAllLoger" value="true"/>
    <add key="EnableDefaultLoger" value="true"/>
    <add key="EnableExceptionLoger" value="true"/>
    <add key="EnableServerLoger" value="true"/>
    <add key="EnableDebugLoger" value="true"/>
  </appSettings>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <log4net>

    <root>
      <!--<level value="ALL" />
      <appender-ref ref="rootFile" />-->
    </root>

    <!--log大分类-->
    <logger name="defaultLoger">
      <level value="INFO" />
      <appender-ref ref="defaultFile" />
      <!--若要更改日志输出目的(file 、database 、Console)，请更改此配置-->
    </logger>

    <logger name="exceptionLoger">
      <level value="RROR" />
      <appender-ref ref="exceptionFile"/>
      <!-- ref="exceptionFile" />-->
    </logger>

    <logger name="serverLoger">
      <level value="INFO" />
      <appender-ref ref="serverFile" />
    </logger>

    <logger name="DebugLoger">
      <level value="DEBUG" />
      <appender-ref ref="debugFile" />
    </logger>

    <!--输出到文件的配置-->
    <appender name="defaultFile" type="log4net.Appender.RollingFileAppender,log4net" >
      <!--指定目录-->
      <param name="File" value="Content/Log/Default/" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <!--文件名格式-->
      <param name="DatePattern" value="'default_'yyyyMMdd'.log'" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n#############################################################################%n%n1、时间：%d%n2、优先级别：%p%n3、线程ID：%t%n4、耗时：%r%n5、行号：%L%n6、文件名：%F%n7、详细信息：%m%n" />
      </layout>
    </appender>

    <appender name="exceptionFile" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Content/Log/Exception/" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="'exception_'yyyyMMdd'.log'" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n#############################################################################%n%n1、时间：%d%n2、优先级别：%p%n3、线程ID：%t%n4、耗时：%r%n5、行号：%L%n6、文件名：%F%n7、详细信息：%m%n" />
      </layout>
    </appender>

    <appender name="serverFile" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" type="" value="Content/Log/Server/" />
      <param name="AppendToFiLogFileAppenderByDatele" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="'server_'yyyyMMdd'.log'" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n#############################################################################%n%n1、时间：%d%n2、优先级别：%p%n3、线程ID：%t%n4、耗时：%r%n5、行号：%L%n6、文件名：%F%n7、详细信息：%m%n" />
      </layout>
    </appender>

    <appender name="debugFile" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" type="" value="Content/Log/Debug/" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="'debug_'yyyyMMdd'.log'" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n#############################################################################%n%n1、时间：%d%n2、优先级别：%p%n3、线程ID：%t%n4、耗时：%r%n5、行号：%L%n6、文件名：%F%n7、详细信息：%n%m%n" />
      </layout>
    </appender>

    <!--输出到控制台的配置-->
    <appender name="ErrorConsole" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="Header" value="[Header]\r\n"/>
        <param name="Footer" value="[Footer]\r\n"/>
        <param name="ConversionPattern" value="%d %-5p — Line:%L %F  %c %m%n"/>
      </layout>
    </appender>

    <appender name="DebugConsole" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="Header" value="[Header]\r\n"/>
        <param name="Footer" value="[Footer]\r\n"/>
        <param name="ConversionPattern" value="%d %-5p — Line:%L %F  %c %m%n"/>
      </layout>
    </appender>
    <!--输出到数据库的配置-->

