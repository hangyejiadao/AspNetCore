@using Dos.ORM.Web.App_Common.Mvc
@model Dos.ORM.Model.Business.BUS_Project
@{
    ViewBag.Title = "项目管理";
    Layout = "~/Views/BasePage/_LayoutMsSysDetailSingle.cshtml";
}
<form class="easyui-form" id="frmMain" method="post">
    <table class="frm-tb">
        <tbody>
            <tr>
                @Html.HiddenFor(m=>m.ProjectID)
                <td>项目名称:</td>
                <td>@Html.ExtTextBoxFor(m => m.ProjectName)</td>
                <td>项目简称:</td>
                <td>@Html.ExtTextBoxFor(m => m.ProjectShorName)</td>
            </tr>
            <tr>
                <td>项目代码:</td>
                <td>@Html.ExtTextBoxFor(m => m.ProjectCode)</td>
                <td>是否启用:</td>
                <td>
                    @Html.ExtRadioBoxList(m => m.是否启用, (SelectList)ViewBag.StatusType, new { id = "thisIsEnable" })
                </td>
            </tr>                  
            <tr>
                <td>试验机联网地址:</td>
                <td colspan="3">@Html.ExtTextBoxFor(m => m.SoftUrl, new { width = 542 })</td>
            </tr>
            <tr>
                <td>拌合站数据库:</td>
                <td colspan="3">@Html.ExtTextBoxFor(m => m.DataCollectionUrl, new { width = 542, multiline = true })</td>
            </tr>
            <tr>
                <td>拌合站接口:</td>
                <td colspan="3">@Html.ExtTextBoxFor(m => m.BhzApi, new { width = 542 })</td>
            </tr>
            <tr>
                <td>备注：</td>
                <td colspan="3">@Html.ExtTextBoxFor(m => m.Note, new { width = 542, multiline = true })</td>
            </tr>
        </tbody>
    </table>
</form>
<script>
    var thisForm;

    $(function () {
        initData();
    });

    function initData() {
        thisForm = $('#frmMain');
    }

    function saveData() {
        console.log('ssss');
        saveProj();
    }

    function saveProj() {
        console.log('ssss');
        QBO.frm.submit(thisForm, {
            url: '/MsManage/Project/SaveProjData',
            onSubmit: function (param) {
                //父Id
                //if (QBO.plu.zt.get('zTreePanel').str.length > 0) {
                //    param.ParentID = QBO.plu.zt.get('zTreePanel').str;
                //}
                //param.是否隐藏 = $('#thisIsHide').checkbox('getValue').IsHide;
            },
            success: function (data) {
                QBO.dia.msg(data.Msg, {
                    icon: data.Result === 100 ? 'right' : 'error',
                    endCallback: function () {
                        if (data.Result === 100) { QBO.frm.closeWin(function () { QBO.frm.getWin().reloadGridData('tg'); }); }
                    }
                });
            }
        });
    }
</script>
