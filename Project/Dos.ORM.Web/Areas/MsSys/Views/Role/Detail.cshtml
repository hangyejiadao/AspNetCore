@using Dos.ORM.Web.App_Common.Mvc
@model Dos.ORM.Model.System.SYS_Role
@{
    ViewBag.Title = "角色管理";
    Layout = "~/Views/BasePage/_LayoutMsSysDetailSimple.cshtml";
}
<style>
    .role-type { padding: 5px 0 5px 10px; border-bottom: 1px dashed #c2c2c2; }
    .role-select { padding: 5px 0 0 10px; }
</style>
<script src="~/Content/Components/zTree/js/jquery.ztree.core.min.js"></script>
<script src="~/Content/Components/zTree/js/jquery.ztree.excheck.min.js"></script>
<div data-options="region:'west',border:false,split:true" style="width: 255px;">
    <div class="role-type">
        模块类型：
        @Html.ExtDropDown("ModuleType", (SelectList)ViewBag.ModuleTypes, new { width = 150, onChange = "moduleTypeChg" })
    </div>
    <div class="role-select">
        @Html.ExtLinkButton("modAll", new { text = "全选", iconCls = "icon-apply", onClick = "function(){QBO.plu.zt.checkAll('zTreePanel');}" })
        @Html.ExtLinkButton("modAllCancel", new { text = "取消全选", iconCls = "icon-cancel", onClick = "function(){QBO.plu.zt.checkAll('zTreePanel',false);}" })
    </div>
    <ul id="zTreePanel" class="ztree"></ul>
</div>
<div data-options="region:'south',border:false" class="frm-toolbar">
    @Html.ExtAuthBtn()
</div>
<div data-options="region:'center',border:false">
    <form class="easyui-form" id="frmMain" method="post">
        <table class="frm-tb">
            <tbody>
                <tr>
                    <td>模块名称：</td>
                    <td>
                        @Html.ExtTextBoxFor(m => m.RoleName, new { required = true, validType = "maxLength[50]", width = 300 })
                    </td>
                </tr>
                @{
                    if (ViewBag.IsSuperAdmin)
                    {
                        <tr>
                            <td>所属公司：</td>
                            <td>
                                @Html.ExtComboTreeFor(m => m.CompanyId, new { width = 300, url = "/MsSys/Company/GetChooseCompanys", queryParams = "{type:2}" })
                            </td>
                        </tr>
                    }
                }
                <tr>
                    <td>是否启用：</td>
                    <td>
                        @Html.ExtRadioBoxList(m => m.IsEnable, (SelectList)ViewBag.StatusType, new { id = "thisIsEnable" })
                    </td>
                </tr>
                <tr>
                    <td>模块描述：</td>
                    <td>@Html.ExtTextBoxFor(m => m.Desc, new { validType = "maxLength[200]", width = 300, multiline = true })</td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
<script>
    var thisForm;

    $(function () {
        initData();
    });

    function initData() {
        thisForm = $('#frmMain');

        getModules(0);
    }

    //获取左侧模块树
    function getModules(type) {
        QBO.plu.ajax({
            url: '/MsSys/Role/GetModule',
            data: { moduleType: type }
        }, function (data) {
            QBO.plu.zt.init('zTreePanel', data, { check: true });
        });
    }

    function saveData() {
        if (QBO.plu.zt.get('zTreePanel').str.length <= 0) {
            QBO.dia.confirm('当前未选择包含的模块，确定要继续？', function () {
                saveModule();
            });
        } else {
            saveModule(true);
        }
    }

    function saveModule(isSavePId) {
        QBO.frm.submit(thisForm, {
            url: '/MsSys/Role/SaveData',
            onSubmit: function (param) {
                //模块Id集合
                if (isSavePId && QBO.plu.zt.get('zTreePanel').str.length > 0) {
                    param.moduleIds = QBO.plu.zt.get('zTreePanel').str;
                }
                param.IsEnable = $('#thisIsEnable').checkbox('getValue').IsEnable;
            },
            success: function (data) {
                QBO.dia.msg(data.Msg, {
                    icon: data.Result === 100 ? 'right' : 'error',
                    endCallback: function () {
                        if (data.Result === 100) { QBO.frm.closeWin(function () { QBO.frm.getWin().reloadGridData(); }); }
                    }
                });
            }
        });
    }

    function moduleTypeChg(newValue, oldValue) {
        getModules(!newValue || newValue.length <= 0 ? 0 : newValue);
    }
</script>