@using System.Web.Optimization
@using Dos.ORM.Common.Helpers
@using Dos.ORM.Web.App_Common.Mvc
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/Components/Animate/animate.min.css" rel="stylesheet" />
    <link href="~/Content/Components/FontAwesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/Components/jQuery/jquery-1.12.4.min.js"></script>
    <script src="~/Content/Components/Cookie/jquery.cookie.min.js"></script>
    <script src="~/Content/Components/jClock/jquery.jclock.js"></script>
    <script src="~/Content/Components/AngularJS/angular.min.js"></script>
    <link href="~/Content/Components/EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <script src="~/Content/Components/EasyUI/jquery.easyui.min.js"></script>
    <script src="~/Content/Components/zTree/js/jquery.ztree.core.min.js"></script>
    <script src="~/Content/Components/Layer/layer.min.js"></script>
    @Html.ExtAuthTheme()
    <script src="~/Content/Js/Base/base.core.js"></script>
    <script src="~/Content/Js/Base/base.loading.js"></script>
</head>
<body class="easyui-layout sys-main" ng-app="ngApp" ng-controller="mainCtrl">
    <div data-options="region:'north',border:false" class="sys-main-north">
        <div class="north-left">
            <a href="javascript:;">
                <img src="~/Content/Images/Logo/logo_main.png" alt="quber" />
            </a>
        </div>
        <div class="north-right">
            <a class="north-nav" href="javascript:;" ng-click="topRightFn('home')"><i class="fa fa-home"></i><span>首页</span></a>
@*            <a class="north-nav" href="javascript:;" ng-click="topRightFn('menuSys')"><i class="fa fa-cog"></i><span>系统管理</span></a>
            <a class="north-nav" href="javascript:;" ng-click="topRightFn('menuBus')"><i class="fa fa-wrench"></i><span>业务管理</span></a>*@
            <a class="north-nav" href="javascript:;" id="lbtnThemes"><i class="fa fa-file-picture-o"></i><span>主题</span></a>
            @*<a class="north-nav" href="javascript:;" ng-click="topRightFn('per')"><i class="fa fa-user"></i><span>个人中心</span></a>
                <a class="north-nav" href="javascript:;" ng-click="topRightFn('exit')"><i class="fa fa-power-off"></i><span>退出系统</span></a>*@

            <div class="north-person">
                <a href="javascript:;" id="lbtnPerson">
                    <div class="north-photo"><img ng-src="{{userInfo.PhotoPath&&userInfo.PhotoPath?userInfo.PhotoPath:'/Content/Images/Common/com_user_photo.png'}}" /></div>
                    <div class="north-name">@ViewBag.AdminName</div>
                </a>
            </div>

        </div>
    </div>
    <div data-options="region:'west',split:true,title:'QUBER.XM MP',iconCls:'fa fa-home'" class="sys-main-west">
        <div class="easyui-accordion" data-options="border:false,fit:true" id="accModule">
            <div title="系统管理" data-options="iconCls:'fa fa-cog',tools:'#ec'" ng-if="moduleType==1">
                <div id="ec">
                    <a href="javascript:;" class="easyui-tooltip fa fa-plus-circle" title="展开" ng-click="leftMenuFn(true)"></a>
                    <a href="javascript:;" class="easyui-tooltip fa fa-minus-circle" title="折叠" ng-click="leftMenuFn(false)"></a>
                </div>
                <ul id="zTreePanel" class="ztree animated fadeIn"></ul>
            </div>

            @*<div title="{{item.name}}" data-options="iconCls:'fa fa-cog'" ng-repeat="item in moduleListEasy.sys">
                    <a href="javascript:;" class="west-menu" ng-repeat="son in item.Sons"><i class="{{son.iconName}}"></i><span ng-bind="son.name"></span></a>
                </div>*@

            @*<div title="系统管理11" data-options="iconCls:'fa fa-cog'">
                    <a href="javascript:;" class="west-menu"><i class="fa fa-apple"></i><span>公司管理</span></a>
                    <a href="javascript:;" class="west-menu"><i class="fa fa-apple"></i><span>公司管理</span></a>
                    <a href="javascript:;" class="west-menu"><i class="fa fa-apple"></i><span>公司管理</span></a>
                    <a href="javascript:;" class="west-menu"><i class="fa fa-apple"></i><span>公司管理</span></a>
                </div>*@

            @*<div title="其他管理" data-options="iconCls:'fa fa-cog'">
                </div>*@
        </div>
    </div>
    <div data-options="region:'south',border:false" class="sys-main-south">
        <div class="south-left"><i class="fa fa-star"></i>综合信息管理系统v2.0.0</div>
        <div class="south-center">Copyright <i class="fa fa-copyright"></i> 2013-2015 技术支持：Quber 联系邮箱：qubernet@163.com</div>
        <div class="south-right"><i class="fa fa-clock-o"></i><span id="systemDate" class="easyui-tooltip time" title="@DateHelper.GetNlDate(DateTime.Now)"></span></div>
    </div>
    <div data-options="region:'center'" class="sys-main-center">
        <div id="main-center" class="easyui-tabs" data-options="border:false,fit:true,tools:'#tab-tools'">
            <div title="系统主页" data-options="iconCls:'fa fa-home'">
                <iframe scrolling="yes" src="/MsSys/Main/Content" class="sys-main-iframe"></iframe>
            </div>
        </div>
    </div>

    <!--Right Click Menu begin-->
    <div id="easyui-tabs-menu" class="easyui-menu qb-hide">
        <div id="mm-tabrefresh" data-options="iconCls:'fa fa-refresh'">刷新当前</div>
        <div id="mm-tabclose" data-options="iconCls:'fa fa-times'">关闭当前</div>
        <div id="mm-tabcloseall" data-options="iconCls:'fa fa-times'">全部关闭</div>
        <div id="mm-tabcloseother" data-options="iconCls:'fa fa-times'">除此之外全部关闭</div>
        <div class="menu-sep"></div>
        <div id="mm-tabcloseleft" data-options="iconCls:'fa fa-times'">当前页左侧全部关闭</div>
        <div id="mm-tabcloseright" data-options="iconCls:'fa fa-times'">当前页右侧全部关闭</div>
        <div class="menu-sep"></div>
        <div id="mm-exit" data-options="iconCls:'fa fa-times-circle'">退出</div>
    </div>
    <!--Right Click Menu end-->
    <!--tabs 右侧按钮 begin-->
    <div id="tab-tools" class="qb-hide">
        <a href="javascript:;" class="easyui-linkbutton easyui-tooltip" title="刷新当前页" data-options="plain:true,iconCls:'fa fa-refresh'" ng-click="tabBtnFn('refresh')"></a>
        <a href="javascript:;" class="easyui-linkbutton easyui-tooltip" title="全屏显示" ng-show="!isFullScreen" data-options="plain:true,iconCls:'fa fa-expand'" ng-click="tabBtnFn('full')"></a>
        <a href="javascript:;" class="easyui-linkbutton easyui-tooltip" title="退出全屏" ng-show="isFullScreen" data-options="plain:true,iconCls:'fa fa-compress'" ng-click="tabBtnFn('unfull')"></a>
    </div>
    <!--tabs 右侧按钮 end-->
    <!--锁屏 begin-->
    <div id="diaLock" class="sys-main-lock qb-hide">
        <div>
            解锁密码：<input class="easyui-passwordbox" id="txtLock" data-options="lastDelay:0,checkInterval:0" style="width:170px;height:28px;padding:5px" />@Html.ExtFrmFill()
        </div>
        <div class="lock-lbtn">
            <a href="javascript:;" class="easyui-linkbutton" id="lbtnUnlock" data-options="iconCls:'fa fa-unlock',onClick:unlockScreen,plain:true">解锁</a>
        </div>
    </div>
    <!--锁屏 end-->
</body>
</html>
<script src="~/Content/Js/Module/System/sys.main.index.js"></script>