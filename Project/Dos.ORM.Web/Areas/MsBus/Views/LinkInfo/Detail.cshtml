@using Dos.ORM.Web.App_Common.Mvc
@model Dos.ORM.Model.Business.BUS_LinkInfo
@{
    ViewBag.Title = "链接信息管理";
    Layout = "~/Views/BasePage/_LayoutMsSysDetailSingle.cshtml";
}
<form class="easyui-form" id="frmMain" method="post">
    <table class="frm-tb">
        <tbody>
            @{
                if (ViewBag.IsSuperAdmin)
                {
                    <tr>
                        <td>所属公司：</td>
                        <td colspan="3">
                            @Html.ExtComboTreeFor(m => m.CompanyId, new { required = true, width = 200, url = "/MsSys/Company/GetChooseCompanys", queryParams = "{type:2}", onLoadSuccess = "companyLod", onClick = "companyChg" })
                        </td>
                    </tr>
                }
            }
            <tr>
                <td>链接标题：</td>
                <td>
                    @Html.ExtTextBoxFor(m => m.LinkInfoName, new { required = true, validType = "maxLength[100]" })
                </td>
                <td>所属类型：</td>
                <td>
                    @Html.ExtDropDownFor(m => m.LinkTypeId, (List<SelectListItem>)ViewBag.LinkTypeIds, new { required = true, valueField = "Value", textField = "Text" })
                </td>
            </tr>
            <tr>
                <td>链接图片：</td>
                <td colspan="3">
                    @Html.HiddenFor(m => m.ImgPath)
                    @Html.ExtNumberSpinnerFor(m => m.ImgWidth, new { min = 100, max = 200, value = 100, buttonText = "图片宽度" })
                    @Html.ExtNumberSpinnerFor(m => m.ImgHeight, new { min = 50, max = 150, value = 50, buttonText = "图片高度" })
                    @Html.ExtImgFor(m => m.ImgPath)
                    <a href="javascript:;" class="easyui-linkbutton" id="lbtnImg" data-options="iconCls:'icon-image',plain:true">点击修改</a>
                </td>
            </tr>
            <tr>
                <td>链接地址：</td>
                <td>@Html.ExtTextBoxFor(m => m.Url, new { required = true, validType = "url" })</td>
                <td>排序号：</td>
                <td>
                    @Html.ExtNumberSpinnerFor(m => m.SortNo)
                </td>
            </tr>
            <tr>
                <td>描述：</td>
                <td colspan="3">
                    @Html.ExtTextBoxFor(m => m.Desc, new { validType = "maxLength[400]", width = 582, height = 60, multiline = true })
                </td>
            </tr>
            <tr>
                <td>是否置顶：</td>
                <td>
                    @Html.ExtRadioBoxList(m => m.IsTop, (SelectList)ViewBag.StatusType, new { id = "thisIsTop" })
                </td>
                <td>是否启用：</td>
                <td>
                    @Html.ExtRadioBoxList(m => m.IsEnable, (SelectList)ViewBag.StatusType, new { id = "thisIsEnable" })
                </td>
            </tr>
        </tbody>
    </table>
</form>
<script>
    var thisForm;

    $(function () {
        initData();
        initEvent();
    });

    function initData() {
        thisForm = $('#frmMain');
    }

    function initEvent() {
        $('#lbtnImg').on('click', function () {
            QBO.frm.openWin('/MsSys/Common/UploadImg?folder=BusLinkInfo&isCut=1&cutWidth=100&cutHeight=50&oldPath=@Model.ImgPath', { title: '上传图片', width: 1000, height: 450 });
        });
    }

    function saveData() {
        QBO.frm.submit(thisForm, {
            url: '/MsBus/LinkInfo/SaveData',
            onSubmit: function (param) {
                param.IsTop = $('#thisIsTop').checkbox('getValue').IsTop;
                param.IsEnable = $('#thisIsEnable').checkbox('getValue').IsEnable;
            },
            success: function (data) {
                QBO.dia.msg(data.Msg, {
                    icon: data.Result === 100 ? 'right' : 'error',
                    endCallback: function () {
                        if (data.Result === 100) { QBO.frm.closeWin(function () { QBO.frm.getWin().reloadGridData(); }); }
                    }
                });
            }
        });
    }

    function setImg(imgPath) {
        $('#ImgPathShow').attr('src', imgPath);
        $('#ImgPath').val(imgPath);
    }

    //初始化公司加载公司其下的链接信息分类
    function companyLod(node, data) {
        loadComLinkTypes($('#CompanyId').combotree('getValue'));
    }

    //选项公司后加载公司其下的链接信息分类
    function companyChg(node) {
        $('#LinkTypeId').combobox('setValue', '');
        loadComLinkTypes(node.id);
    }

    function loadComLinkTypes(comId) {
        if (comId.length <= 0) return;

        QBO.plu.ajax({
            url: '/MsBus/LinkInfo/GetLinkTypes',
            data: { comId: comId }
        }, function (data) {
            if (data.Result === 100) {
                $('#LinkTypeId').combobox('loadData', data.Data);
            }
        });
    }
</script>